<div class="container">
    <form action="/signup" method="POST" enctype="multipart/form-data">
        <div class="form-group">
            <label for="userName">
                Name: <input type="text" id="userName" name="name" value={{name}}>
            </label>
            <span>{{error.name}}</span>
        </div>
        <br>
        <div class="form-group">
            <label for="userEmail">
                Email: <input type="text" id="userEmail" name="email" value={{email}}>
            </label>
        </div>
        <br>
        <div class="form-group">
            <label for="userNumber">
                Number: <input type="text" name="number" id="userNumber" value={{number}}>
            </label>
        </div>
        <br>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Sign Up</button>
        </div>
    </form>
</div>